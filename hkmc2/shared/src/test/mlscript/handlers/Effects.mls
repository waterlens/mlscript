abstract class StackDelay with
  fun raise(): ()

// stack safe recursion
:expect 5050
handle h = StackDelay with
  fun raise()(k) =
    // console.trace("Stack unwinded!")
    k(10)
fun sum(depth, x) =
  let new_depth = if depth > 70 then
    // console.trace("Too deep, heapifying the stack")
    h.raise()
  else
    depth + 1
  if x != 0 then
    x + sum(new_depth, x - 1)
  else 0
sum(0, 100)
//│ = 5050

