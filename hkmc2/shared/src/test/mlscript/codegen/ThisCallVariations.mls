class Example2(val a) with
  val a = 1
  fun f(inc) = Example2(a + inc)

let oops2 = Example2(0).f
//│ oops2 = [Function: f]

Example2(1) . oops2(2) . oops2(2)
//│ = Example2 { a: 1 }

Example2(1). oops2(2). oops2(2)
//│ = Example2 { a: 1 }

(new Example2(1)) . oops2(2)
//│ = Example2 { a: 1 }

