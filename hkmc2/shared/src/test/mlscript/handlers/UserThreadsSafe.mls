class ThreadEffect with
  // task queue
  val tasks = []
  fun drain() =
    while tasks.length != 0 do
      tasks.pop()()
  fun fork(thread: () -> ()): ()
  fun yld(): ()


fun f(h, x)() =
  print("f " + x)
  h.yld()
  print("f " + x)
  h.yld()
  print("f " + x)

fun main(h) =
  print("main start")
  h.fork(f(h, 0))
  h.fork(f(h, 1))
  h.fork(f(h, 2))
  print("main end")


// LIFO
handle h = ThreadEffect with
  fun fork(thread)(k) =
    this.tasks.push(thread)
    k()
    this.drain()
  fun yld()(k) =
    this.tasks.unshift(k)
    this.drain()
in
  main(h)
//│ > main start
//│ > main end
//│ > f 2
//│ > f 1
//│ > f 0
//│ > f 2
//│ > f 1
//│ > f 0
//│ > f 2
//│ > f 1
//│ > f 0


// FIFO
handle h = ThreadEffect with
  fun fork(thread)(k) =
    this.tasks.unshift(thread)
    k()
    this.drain()
  fun yld()(k) =
    this.tasks.unshift(k)
    this.drain()
in
  main(h)
//│ > main start
//│ > main end
