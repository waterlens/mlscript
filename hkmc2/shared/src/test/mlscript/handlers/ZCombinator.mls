// simplified version without lambdas for easier debugging
:stackSafe 5
fun mkrec(g) =
  fun a(self) =
    fun b(y) = selfApp(self)(y)
    g(b)
  selfApp(a)

:stackSafe 5
let fact = 
  fun a(self) =
    fun b(x) =
      if x == 0 then 1 else 
        console.log(__stackDepth, __stackOffset)
        let prev = self(x - 1)
        console.log("resumed:", x)
        x * prev
    b
  mkrec(a)
//│ fact = [Function: b]

