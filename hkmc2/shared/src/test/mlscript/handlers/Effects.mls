  print("Entering foobar")
  let result = bar(h) + "!"
  print("Exiting foobar")
  result
handle h = Effect with
  fun perform(arg)(k) =
    print("handler called")
    let result = k(arg)
    print("handler finished")
    result
print("mainbody start")
let result = foobar(h)
print("mainbody end")
result
