:js
:handler
:stackSafe 1000

fun selfApp(f) = f(f)

fun mkrec(g) =
  selfApp of self =>
    g of y => self(self)(y)

let fact = mkrec of self => x =>
  if x == 0 then 1 else self(x - 1) * x
//│ fact = [Function (anonymous)]

fact(3)
//│ = 6

fact(10)
//│ = 3628800

:re
:stackSafe off
fact(10000)
//│ ═══[RUNTIME ERROR] RangeError: Maximum call stack size exceeded

:stackSafe 1000
fun mkrec(g) =
  selfApp of self =>
    g of y => selfApp(self)(y)

let fact = mkrec of self => x =>
  if x == 0 then 1 
  else self(x - 1) * x
//│ fact = [Function (anonymous)]

:stackSafe 1000
fact(10000)
